{
    "name": "skills-sdk",
    "version": "1.0.0",
    "description": "Web3 documentation aggregation pipeline that transforms blockchain provider docs into AI-agent-ready SKILL.md knowledge packs",
    "private": true,
    "workspaces": [
        "packages/*",
        "packages/skills-solidity"
    ],
    "scripts": {
        "build": "npm run build --workspaces --if-present",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "lint": "eslint . --ext .ts,.tsx",
        "lint:fix": "eslint . --ext .ts,.tsx --fix",
        "format": "prettier --write \"**/*.{ts,tsx,js,json,md}\"",
        "format:check": "prettier --check \"**/*.{ts,tsx,js,json,md}\"",
        "clean": "rm -rf packages/*/dist packages/*/coverage node_modules",
        "validate:all": "npm run lint && npm run test && npm run build",
        "sync": "node dist/scripts/sync-docs.js",
        "create:parser": "node dist/scripts/create-parser.js",
        "generate:openzeppelin": "ts-node scripts/generate-openzeppelin-skill.ts",
        "setup:env": "cp .env.example .env",
        "prepare": "npm run build",
        "version:bump": "bash version-manager.sh bump",
        "version:tag": "bash version-manager.sh tag",
        "version:publish": "bash version-manager.sh publish",
        "commit": "node version/scripts/parallel-commit.js",
        "commit:dry": "node version/scripts/parallel-commit.js --dry-run",
        "commit:sh": "bash version/scripts/parallel-commit.sh",
        "commit:sh:dry": "bash version/scripts/parallel-commit.sh --dry-run",
        "commit:all": "git add -A && git commit -m \"chore: update project files\"",
        "commit:auto": "bash version/scripts/parallel-commit.sh --max 3",
        "status": "git status",
        "changes": "git status --porcelain",
        "staged": "git diff --cached --name-only"
    },
    "keywords": [
        "ai",
        "blockchain",
        "web3",
        "solidity",
        "skills",
        "claude",
        "agent",
        "documentation",
        "parser"
    ],
    "author": "HyperKit Labs <contact@hyperionkit.xyz>",
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/Hyperkit-Labs/skills-sdk.git"
    },
    "engines": {
        "node": ">=20.0.0",
        "npm": ">=10.0.0"
    },
    "devDependencies": {
        "@types/jest": "^29.5.11",
        "@types/node": "^20.10.6",
        "@typescript-eslint/eslint-plugin": "^6.17.0",
        "@typescript-eslint/parser": "^6.17.0",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.1.2",
        "jest": "^29.7.0",
        "prettier": "^3.1.1",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3"
    },
    "dependencies": {
        "tslib": "^2.8.1"
    }
}
